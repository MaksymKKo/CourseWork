@{
    ViewData["Title"] = "Products";
}
<link rel="stylesheet" href="~/adminPanel/css/adminTabels.css" asp-append-version="true">
<h1>Products</h1>
<h3 id="formMethod">Create Product</h3>
<form id="myForm">
    <input type="hidden" id="id">
    <label for="title">Title</label>
    <input type="text" id="title" />

    <label for="description">Description</label>
    <input type="text" id="description" />

    <label for="picture">Picture</label>
    <input type="text" id="picture" />

    <label for="price">Price</label>
    <input type="text" id="price" />

    <label for="characteristics">Characteristics</label>
    <input type="text" id="characteristics" />

    <label for="categoryId">Category Id</label>
    <input type="text" id="categoryId" />

    <button type="submit" class="btn btn-success" id="submit">Save</button>
    <button type="button" class="btn btn-info" id="clear">Clear</button>
</form>
<hr />
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Picture</th>
            <th>Price</th>
            <th>Characteristics</th>
            <th>CategoryId</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script src="../adminPanel/js/products.js"></script>

