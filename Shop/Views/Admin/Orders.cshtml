@{
    ViewData["Title"] = "Orders";
}
<link rel="stylesheet" href="~/adminPanel/css/adminTabels.css" asp-append-version="true">
<h1>Orders</h1>
<h3 id="formMethod">Edit Order</h3>
<form id="myForm">
    <input type="hidden" id="id">
    <label for="user_id">User Id</label>
    <input type="text" id="userId" disabled />

    <label for="totalSum">Total Sum</label>
    <input type="text" id="totalSum" />

    <label for="orderDate">Order Date</label>
    <input type="text" id="orderDate" disabled />

    <button type="submit" class="btn btn-success" id="submit">Save</button>
    <button type="button" class="btn btn-info" id="clear">Clear</button>
</form>
<hr />
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>User Id</th>
            <th>OrderDate</th>
            <th>TotalSum</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script src="../adminPanel/js/orders.js"></script>

