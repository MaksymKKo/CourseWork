@{
    ViewData["Title"] = "Categories";
}
<link rel="stylesheet" href="~/adminPanel/css/adminTabels.css" asp-append-version="true">
<h1>Categories</h1>
<h3 id="formMethod">Create Category</h3>
<form id="myForm">
    <input type="hidden" id="id">
    <label for="title">Title</label>
    <input type="text" id="title" />

    <button type="submit" class="btn btn-success" id="submit">Save</button>
    <button type="button" class="btn btn-info" id="clear">Clear</button>
</form>
<hr />
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script src="../adminPanel/js/categories.js"></script>

